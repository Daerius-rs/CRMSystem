<Page x:Class="CRMSystem.View.CustomerViews.PersonalAccountFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRMSystem.View.CustomerViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonalAccountFrame">

    <Grid>
        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Path=SurName}"/>
            <TextBlock Text="{Binding Path=FirstName}" Margin="5,0,0,0"/>
            <TextBlock Text="{Binding Path=MiddleName}" Margin="5,0,0,0"/>
        </StackPanel>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Orders.CreationDate, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Binding="{Binding Path=Orders.OrderStatus.Name}"/>
                <DataGridTextColumn Binding="{Binding Path=Orders.Description}"/>
                <DataGridTextColumn Binding="{Binding Path=OrderPrice}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
