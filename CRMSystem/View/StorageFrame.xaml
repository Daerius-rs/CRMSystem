<UserControl x:Class="CRMSystem.View.StorageFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMSystem.View"
             mc:Ignorable="d" x:Name="thisFrame"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox x:Name="listing">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="model:StorageAnalytic">
                    <StackPanel Width="{Binding Path=Width,ElementName=thisFrame}"
                                Orientation="Horizontal">
                        <Image/>
                        <TextBlock Text="{Binding Path=Product.Name, StringFormat={}{0}|}"/>
                        <TextBlock Text="{Binding Path=Product.Price, StringFormat={}{0:F2}|}"/>
                        <TextBlock Text="{Binding Path=Product.PriceChange, StringFormat={}{0:F2}|}"/>
                        <TextBlock Text="{Binding Path=Product.Count, StringFormat={}{0}|}"/>
                        <TextBlock Text="{Binding Path=Popularity, StringFormat={}{0:P2}|}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
