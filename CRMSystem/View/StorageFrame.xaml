<UserControl x:Class="CRMSystem.View.StorageFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMSystem.View"
             mc:Ignorable="d" x:Name="thisFrame"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="model:OrderDetails">
                    <StackPanel Width="{Binding Path=Width,ElementName=thisFrame}"
                                Orientation="Horizontal">
                        <Image/>
                        <TextBlock Text="{Binding Path=Name}"/>
                        <TextBlock Text="{Binding Path=Price}"/>
                        <TextBlock Text="{Binding Path=PriceChange}"/>
                        <TextBlock Text="{Binding Path=Analytic}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
